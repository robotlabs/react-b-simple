{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jasmine": true,
    "mocha": true,
    "node": true,
    "phantomjs": true,
    "serviceworker": true,
    "worker": true
  },
  "plugins": [
    "react"
  ],
  "globals": {
      "console": false,
      "Modernizr": false,
      "_": true,
      "google": true,
      "d3": true,
      "PIXI": true,
      "nv": true,
      "topojson": true,
      "d3v4": true,
      "TweenMax": true,
      "THREE": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true,
      ...
    },
    "plugins": [
      "react"
    ]
  },
  "root": true,
  "rules": {
    "array-bracket-spacing": [2, "never"],
    "brace-style": 2,
    "camelcase": ["error", {properties: "never"}],
    "comma-dangle": 2,
    "comma-style": 2,
    "computed-property-spacing": [2, "never"],
    "curly": 2,
    "dot-notation": 1,
    "eol-last": 2,
    "eqeqeq": [2, "allow-null"],
    "indent": [2, 2],
    "key-spacing": 2,
    "keyword-spacing": [2, {"before": true, "after": true}],
    "max-len": [2, {"code": 5220, "ignoreComments": true, "ignoreUrls": true}],
    "new-cap": 1,
    "newline-after-var": 0,
    "no-caller": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-multi-str": 2,
    "no-multiple-empty-lines": [2, {"max": 1, "maxEOF": 0}],
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    "no-undef": 2,
    "no-unused-vars": [1, {
      "vars": "all",
      "args": "none"
    }],
    "object-curly-spacing": [2, "never"],
    "one-var-declaration-per-line": 2,
    "operator-linebreak": [2, "before", { "overrides": { "?": "after", ":": "after", "+": "after" }}],
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/react-in-jsx-scope": 1,
    "quotes": [1, "single"],
    "semi": [2, "always"],
    "semi-spacing": [2, { "before": false, "after": true }],
    "space-before-blocks": 2,
    "space-before-function-paren": [2, "never"],
    "space-in-parens": [2, "never"],
    "space-infix-ops": 2,
    "strict": [2, "global"],
    "valid-jsdoc": [2, {
        "requireParamDescription": false,
        "requireReturn": false,
        "requireReturnDescription": false
    }],
    "wrap-iife": [2, "inside"]
  }
}
